{% extends "auth/layout.jinja" %}
{% set title = "Device Activated" %}

{% block body %}
<main class="min-h-screen flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-md text-center">
    <!-- Success Icon -->
    <div class="avatar placeholder mb-8">
      <div class="bg-success/20 text-success w-24 rounded-full">
        <svg class="h-12 w-12" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
      </div>
    </div>

    <!-- Success Message -->
    <h1 class="text-3xl font-bold mb-4">
      All Set!
    </h1>
    <p class="text-base-content/60 mb-8">
      Your device has been successfully activated. You can now close this window and return to your device.
    </p>

    <!-- Card with additional info -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex items-center justify-center text-sm text-base-content/60">
          <svg class="h-5 w-5 mr-2 text-success" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
          </svg>
          Device authorization complete
        </div>
      </div>
    </div>

    <!-- Footer -->
    <p class="mt-8 text-xs text-base-content/50">
      Protected by
      <a href="https://github.com/azutoolkit/authority" target="_blank" rel="noopener" class="link link-primary">
        Authority
      </a>
      OAuth 2.0 Server
    </p>
  </div>
</main>
{% endblock %}
