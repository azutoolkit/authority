{% extends "layout.jinja" %}
{% set title = "Application Details" %}

{% block body %}
<main class="min-h-screen flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-2xl">
    <!-- Card Container -->
    <div class="card bg-base-100 shadow-xl overflow-hidden">
      <!-- Header with Logo -->
      <div class="bg-gradient-to-r from-primary to-primary-focus px-8 py-6">
        <div class="flex items-center space-x-6">
          <div class="avatar">
            <div class="w-20 rounded-xl bg-base-100 p-1 shadow-lg">
              <img src="{{logo}}" alt="{{name}} logo" class="object-cover">
            </div>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-primary-content">{{name}}</h1>
            <p class="mt-1 text-primary-content/70 text-sm">OAuth 2.0 Application</p>
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="px-8 py-6 border-b border-base-200">
        <h2 class="text-sm font-semibold text-base-content/50 uppercase tracking-wide mb-2">
          Description
        </h2>
        <p class="text-base-content/80">{{description}}</p>
      </div>

      <!-- Credentials Section -->
      <div class="px-8 py-6">
        <h2 class="text-sm font-semibold text-base-content/50 uppercase tracking-wide mb-4">
          Credentials
        </h2>

        <!-- Warning Banner -->
        <div class="alert alert-warning mb-6">
          <svg class="h-5 w-5 shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm">Keep your client secret secure. Never expose it in client-side code or public repositories.</span>
        </div>

        <!-- Credentials Table -->
        <div class="space-y-4">
          <!-- Client ID -->
          <div class="bg-base-200 rounded-box p-4">
            <label class="block text-xs font-medium text-base-content/50 uppercase tracking-wide mb-2">
              Client ID
            </label>
            <code class="block text-sm font-mono break-all">
              {{client_id}}
            </code>
          </div>

          <!-- Client Secret -->
          <div class="bg-base-200 rounded-box p-4">
            <label class="block text-xs font-medium text-base-content/50 uppercase tracking-wide mb-2">
              Client Secret
            </label>
            <code class="block text-sm font-mono break-all">
              {{client_secret}}
            </code>
          </div>

          <!-- Redirect URI -->
          <div class="bg-base-200 rounded-box p-4">
            <label class="block text-xs font-medium text-base-content/50 uppercase tracking-wide mb-2">
              Redirect URI
            </label>
            <code class="block text-sm font-mono text-primary break-all">
              {{redirect_uri}}
            </code>
          </div>
        </div>
      </div>

      <!-- Footer Actions -->
      <div class="px-8 py-4 bg-base-200 border-t border-base-300">
        <div class="flex justify-end">
          <a href="/clients" class="btn btn-ghost">
            Back to Applications
          </a>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <p class="mt-8 text-center text-xs text-base-content/50">
      Protected by
      <a href="https://github.com/azutoolkit/authority" target="_blank" rel="noopener" class="link link-primary">
        Authority
      </a>
      OAuth 2.0 Server
    </p>
  </div>
</main>
{% endblock %}
